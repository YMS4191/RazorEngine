@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title> Bilge Adam - @DateTime.Now.ToShortDateString()</title>
</head>
<body>

    @{
        string[] sehirler =  {
        "Ankara",
        "Edirne",
        "İstanbul",
        "CaySeri",
        "Bursa"
    };
    }

    @{
        string isim = "Murat";
        string soyisim = "Vuranok";
        string mail = "murat.vuranok@bilgeadam.com";
    }


    <h1>
        Bilge Adam
    </h1>

    <ul>
        @foreach (string sehir in sehirler)
        {
            <li>@sehir</li>
        }
    </ul>

    <p>
        Ad : @isim
    </p>
    <p>
        Soyad : @soyisim
    </p>
    <p>
        Mail : @mail
    </p>

    <ul>
        @for (int i = 0; i < 100; i++)
        {

            if (i % 2 == 0)
            {
                <li>@i</li>
            }

        }
    </ul>

</body>
</html>
